<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_video_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/layout_video"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <com.knewbie.news.widget.MyJzvdStd
                android:id="@+id/jz_video"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_video_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_video"
            android:padding="7dp"
            android:text="标题标题标题标题标题标题标题标题"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_video_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_video_title"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/textView_video_time"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="作者" />

        <TextView
            android:id="@+id/textView_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_video_title"
            android:layout_alignParentRight="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="2020-12-31" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>