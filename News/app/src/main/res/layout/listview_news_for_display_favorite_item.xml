<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewTitle_Favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="标题标题标题标题标题"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewAuthor_Favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle_Favorite"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="News官方作者"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textViewLastEditTime_Favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle_Favorite"
        android:layout_alignTop="@id/textViewAuthor_Favorite"
        android:layout_alignRight="@id/textViewIntroduction_Favorite"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="2020-01-01"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textViewIntroduction_Favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAuthor_Favorite"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="75dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:maxLines="2"
        android:text="这是一段引言，这是一段引言，这是一段引言，这是一段引言。这是一段引言，这是一段引言，这是一段引言，这是一段引言。这是一段引言，这是一段引言，这是一段引言，这是一段引言。这是一段引言，这是一段引言，这是一段引言，这是一段引言。" />

